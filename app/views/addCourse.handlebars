<nav class="navbar navbar-default">
    <h1>Add a course</h1>
</nav>
<div class="row row-cols-1 row-cols-md-2 g-4 width: 18rem" ;>
    <div class="text-danger">{{message}}</div>
    <form method="POST" autocomplete="off">
        <div class="form-group">
            <label for="coursename">Course name</label>
            <input type="text" class="form-control" name="name" placeholder="Name of the course">
        </div>
        <div class="form-group">
            <label for="courseID">Course code</label>
            <input type="text" class="form-control" name="code" placeholder="example D0020E">
        </div>

        <button type="submit" class="btn btn-primary mt-3" href="#">Submit</button>
    </form>
</div>